@using MARS_Repository.ViewModel
@{
    string EditGroup = "false";
    var PrivilegeList = Session["PrivilegeList"] as List<PrivilegeViewModel>;
    if (PrivilegeList.Count > 0)
    {
        EditGroup = PrivilegeList.Select(y => y.PRIVILEGE_NAME.Trim()).ToList().Contains("Edit Group").ToString().ToLower();
    }
}

<input type="hidden" value="@EditGroup" id="hdnEditGroup" />

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
    <div class="kt-subheader   kt-grid__item" id="kt_subheader" style="left: @ViewBag.width;">
        <div class="kt-container  kt-container--fluid ">
            <div class="kt-subheader__main">

                <span class="kt-subheader__separator kt-hidden"></span>
                <div class="kt-subheader__breadcrumbs">
                    <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-settings" style="color:#1c6081"></i></a>
                    <a href="#" class="kt-subheader__breadcrumbs-link" style="color:#1c6081">
                        Group
                    </a>
                    <i class="fa fa-angle-double-right" style="color:#1c6081"></i>
                    <a href="#" class="kt-subheader__breadcrumbs-link" style="color:#1c6081">
                        &nbsp;
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title" style="color:#1582ab">
                        List Of All Group
                    </h3>
                </div>
                @if (PrivilegeList.Select(y => y.PRIVILEGE_NAME.Trim()).ToList().Contains("Add Group"))
                {
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-wrapper">
                            <div class="kt-portlet__head-actions">
                                <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" data-toggle="modal" onclick="AddGroup()" data-target="#kt_modal_4"><i class="la la-plus"></i>New Group</button>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal fade" id="AddGroup" tabindex="-1" role="dialog" aria-labelledby="gexampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="gexampleModalLabel">Add Group</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="frmgroup">
                                <input type="hidden" id="hdnGroupId" name="hdnGroupId" />
                                <div class="form-group">
                                    <label for="recipient-name" class="form-control-label">Name<span style="color:red">&nbsp;*</span></label>
                                    <input type="text" class="form-control" id="groupname" name="groupname" onchange="CheckGroupNameExist()" maxlength="32">
                                    <label id="existgroupname" class="error" style="display: none;width: 100%;margin-top: 0.25rem;font-size: 80%;color: #fd397a;">
                                        Group Name already exist.
                                    </label>
                                    <label id="groupvalidate" class="error" style="display: none;width: 100%;margin-top: 0.25rem;font-size: 80%;color: #fd397a;">
                                        Group name can only consist Uppercase,Lowercase,numbers and Special characters(-,_,.,*,&,(,))
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="form-control-label">Description<span style="color:red">&nbsp;*</span></label>
                                    <textarea class="form-control" id="groupdesc" name="groupdesc" maxlength="1024"></textarea>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label for="message-text" class="form-control-label">Active</label>
                                    <label class='kt-checkbox kt-checkbox--brand'><input type='checkbox' id='groupactive' name='groupactive' checked/>&nbsp;<span></span></label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="addedgroup" class="btn btn-outline-brand btn-elevate btn-pill" onclick="AddEditGroupSave()">Save</button>
                            <button type="button" class="btn btn-outline-brand btn-elevate btn-pill" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <table class="table table-striped- table-bordered table-hover table-checkable " id="grouptable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Active</th>
                            <th style="color: #1c6081;background-color: #e9f5ff;font-weight: bold;">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

    var GroupTable = function () {
        $.fn.dataTable.Api.register('column().title()', function () {

                return $(this.header()).text().trim();
            });
        var initGroupTable = function () {

            var lEditGroupdisplay = $("#hdnEditGroup").val();

            GroupTable = $('#grouptable').DataTable({
                responsive: false,
                // Pagination settings
                dom: `<'row'<'col-sm-12'tr>>
                                                    <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,
                // read more: https://datatables.net/examples/basic_init/dom.html

                lengthMenu: [10, 100, 1000],
                processing: true,
                pageLength: 100,

                language: {
                    'lengthMenu': 'Display _MENU_',
                    "processing": "<img  src='../assets/media/mars.gif' style='width:80px;'/>"
                },
                "scrollY": $(window).height() - 305,
                searchDelay: 500,
                //  processing: true,
                serverSide: true,
                ajax: {
                    url: '/TestCase/GroupDataLoad',
                    type: 'POST',
                    data: {
                        // parameters for custom backend script demo
                        columnsDef: [
                            'Name', 'Description', 'Active', 'Actions',],
                    },
                },

                columns: [
                    { data: 'Name', name: "Name", width: '30%', "targets": 0, autowidth: false },
                    { data: 'Description', name: "Description", width: '30%', "targets": 1, autowidth: false },
                    { data: 'Active', name: "Active", width: '20%', "targets": 2, autowidth: false },
                    { data: 'Actions', responsivePriority: -1, width: '20%', "targets": 3, autowidth: false }
                ],
                initComplete: function () {
                    var thisTable = this;
                    var rowFilter = $('<tr class="filter"></tr>').appendTo($(GroupTable.table().header()));

                    GroupTable.columns().every(function () {
                        var column = this;
                        var input;
                        switch (column.title()) {
                            case 'Name':
                            case 'Description':
                            //case 'Active':
                                input = $(`<input type="text" class="form-control form-control-sm form-filter kt-input" data-col-index="` + column.index() + `"/>`);
                                $(input).keyup(function () {
                                    var params = {};
                                    $(rowFilter).find('.kt-input').each(function () {
                                        var i = $(this).data('col-index');
                                        if (params[i]) {
                                            params[i] += '|' + $(this).val();
                                        }
                                        else {
                                            params[i] = $(this).val();
                                        }
                                    });
                                    $.each(params, function (i, val) {
                                        GroupTable.column(i).search(val ? val : '', false, false);
                                    });
                                    GroupTable.table().draw();
                                });
                                break;
                        }
                        if (column.title() !== 'actions') {
                            $(input).appendTo($('<th>').appendTo(rowFilter));
                        }
                    });
                },
                columnDefs: [
                    {
                        targets: -1,
                        title: 'Actions',
                        orderable: false,
                        render: function (data, type, full, meta) {
                            var lid = full.Id;
                            var lName = full.Name == null ? "" : full.Name.replace(/'/g, "###");
                            var lDes = full.Description == null ? "" : full.Description.replace(/'/g, "###");
                            var lActive = full.IsActive;
                            var lRenderHtml = "";
                            if (lEditGroupdisplay == "true") {
                            lRenderHtml = " <a href='#' class='btn btn-sm btn-clean btn-icon btn-icon-md' title='View' data-name='" + lName + "' data-des='" + lDes + "' data-act='" + lActive + "'onclick=AddEditGroup(" + lid + ",$(this)) ><i class='la la-edit'></i></a> ";
                            }
                            return lRenderHtml;
                        },
                    }
                ],
            });
        };
        return {
            init: function () {
                initGroupTable();
            },
            };
    }();
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        $($.fn.dataTable.tables(true)).DataTable()
            .columns.adjust();
    });
    jQuery(document).ready(function () {
        GroupTable.init();
    });
    $(document).ready(function () {

        $("#frmgroup").validate({
            rules: {
                groupname: {
                    required: true
                },
                groupdesc: {
                    required: true
                }
            },
        });
    });

    function AddGroup() {
        $("#groupvalidate").css("display", "none");
        $("#groupname").prop("disabled", false);
        $("#addedgroup").attr("disabled", false);
        $("#gexampleModalLabel").text('');
        $("#gexampleModalLabel").text('Add Group');
        $("#AddGroup").modal("show");
        $('.modal-dialog').draggable({
            handle: ".modal-header"
        });
        $("#hdnGroupId").val("");
        $("#groupname").val("");
        $("#groupdesc").val("");
        $("#groupactive").prop('checked', false);

        var validator = $("#frmgroup").validate();
        validator.resetForm();
    }

    function AddEditGroup(Id, editObj) {
        var validator = $("#frmgroup").validate();
        validator.resetForm();
        $("#gexampleModalLabel").text('');
        $("#gexampleModalLabel").text('Edit Group');
        $("#existgroupname").css("display", "none");
        $("#groupname").prop("disabled", true);
        $("#addedgroup").prop("disabled", false);
        $("#groupvalidate").css("display", "none");
      
        var lId = Id;
        var Name = $(editObj).attr("data-name").replace(/###/g, "'");
        var Desc = $(editObj).attr("data-des").replace(/###/g, "'");
        var active = $(editObj).attr("data-act");

        if (active == "1")
            $("#groupactive").prop('checked', true);
        else
            $("#groupactive").prop('checked', false);
        
        $("#groupname").val(Name);
        $("#groupdesc").val(Desc);
        $("#hdnGroupId").val(lId);

        $("#AddGroup").modal("show");
        $('.modal-dialog').draggable({
            handle: ".modal-header"
        });
        if (!$("#groupvalidate").valid())
            return false;
    }

    function AddEditGroupSave() {
        $("#existgroupname").css("display", "none");
        $("#addedgroup").prop("disabled", true);
        if (!$("#frmgroup").valid()) {
            $("#addedgroup").prop("disabled", false);
            return false;
        }
        var lId = $("#hdnGroupId").val();
        if (lId == null && lId == "")
            lId = 0;
        var regex = /^[a-zA-Z0-9-._(&)*  ]*$/;

        var activeval = 0;

        if ($("#groupactive").is(":checked"))
            activeval = 1;

        var GroupModel = {};
        GroupModel.Id = lId,
            GroupModel.Name = $("#groupname").val().trim(),
            GroupModel.Description = $("#groupdesc").val(),
            GroupModel.IsActive = activeval;
        if (!regex.test(GroupModel.Name)) {
            $("#groupname").val("");
            $("#groupvalidate").css("display", "block");
            $("#addedgroup").attr("disabled", false);
            return false;
        }
        startloader();
        $("#AddGroup").modal("hide");
        $.ajax({
            url: "/TestCase/AddEditGroup",
            data: JSON.stringify(GroupModel),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                stoploader();
                $("#addedgroup").attr("disabled", false);
                if (result.status == 1 && result.data) {
                    swal.fire({
                        "title": "",
                        "text": result.message,
                        "icon": "success",
                        "onClose": function (e) {
                            console.log('on close event fired!');
                        }
                    });
                }
                else if (result.status == 0) {
                    swal.fire({
                        "title": "",
                        "text": result.message,
                        "icon": "error",
                        "onClose": function (e) {
                            console.log('on close event fired!');
                        }
                    });
                }
                GroupTable.table().draw();
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    function CheckGroupNameExist() {
        var Name = $("#groupname").val();
        var Id = $("#hdnGroupId").val();

        $.ajax({
            url: "/TestCase/CheckDuplicateGroupNameExist",
            data: '{"Name":"' + Name + '","Id":"' + Id + '"}',
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.status == 1 && result.data) {
                    $("#groupname").val("");
                    $("#existgroupname").css("display", "block");
                }
                else if (result.status == 0) {
                    swal.fire({
                        "title": "",
                        "text": result.message,
                        "icon": "error",
                        "onClose": function (e) {
                            console.log('on close event fired!');
                        }
                    });
                }
            },
        });
    }

    $("#groupname").on('keyup', function () {
        $("#existgroupname").css("display", "none");
    });
    $("#groupname").on('keyup', function () {
        $("#groupvalidate").css("display", "none");
    });
</script>





