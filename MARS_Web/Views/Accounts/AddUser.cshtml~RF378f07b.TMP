            TESTER_NAME_LAST: "",
            TESTER_NAME_M: "",
            TESTER_NAME_F: "",
            TESTER_MAIL: "",
            TESTER_LOGIN_NAME: "",
            TESTER_PWD: "",
           
        }

        $("#kt_form_2").validate({
            // define validation rules
            rules: {
