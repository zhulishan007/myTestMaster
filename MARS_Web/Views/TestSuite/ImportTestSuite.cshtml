                                "title": "Test Suite [" + TestSuiteName + "] imported successfully",
                                //"text": "Please click on link to download error report.",
                                "icon": "success",
                                "allowOutsideClick": false,
                                "onClose": function (e) {
                                    console.log('on close event fired!');
                                }
                            });
                            $("#hdnDownloadTestSuitelink").css("display", "none");
                            $("#downloadTestSuiteFile").attr("href", "#");
                            $.ajax({
                                url: "/Login/LeftPanel",
                                // data: { 'lLoginName': pLoginName, 'lLoginId': TESTER_ID },

                                type: "POST",
                                contentType: "application/json;charset=utf-8",
                                dataType: "HTML",
                                success: function (result) {
                                    $("#leftProjectList").html("");
                                    $("#leftProjectList").html(result);
                                }
                            });
                        }
                        else if (fresult[1] == "validation") {
                            document.getElementById("testsuiteUpload").value = "";
                            $('#testsuiteUpload').parents().find('.custom-file-label')[0].innerHTML = "Choose excel file";
                            swal.fire({
                                "title": "TestSuite Import Validation Error",
                                "text": "Please click on link to download error report.",
                                "icon": "warning",
                                "allowOutsideClick": false,
                                "onClose": function (e) {
                                    console.log('on close event fired!');
                                }
                            });
                            $("#hdnDownloadTestSuitelink").css("display", "block");
                            $("#downloadTestSuiteFile").attr("href", "/TestSuite/DownloadFile?path=" + fresult[0]);

                        }
                        else {
                            swal.fire({
                                "title": "Excpetion occured",
                                "text": "Please click on link to download error report.",
                                "icon": "error",
                                "allowOutsideClick": false,
                                "onClose": function (e) {
                                    console.log('on close event fired!');
                                }
                            });
                            $("#hdnDownloadTestSuitelink").css("display", "block");
                            $("#downloadTestSuiteFile").attr("href", "/TestSuite/DownloadFile?path=" + fresult[0]);
                        }
                        stoploader();
                    },
