                        <div class="col-lg-9 ">
                            <button type="submit" class="btn btn-outline-brand btn-elevate btn-pill" id="btnImportTestSuite">Import</button>
                        </div>
                    </div>
                </div>
            </div>

            @*}*@
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#btnImportTestSuite').click(function () {
            // Checking whether FormData is available in browser
            if (window.FormData !== undefined) {

                var fileUpload = $("#testsuiteUpload").get(0);
                var files = fileUpload.files;
                if (files.length <= 0) {
                    swal.fire({
                        "title": "No files to import",
                        "text": "Please select a file to import",
                        "icon": "error",
                        "allowOutsideClick": false,
                        "onClose": function (e) {
                            console.log('on close event fired!');
                        }
                    });
                    return false;
                }
